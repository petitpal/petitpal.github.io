<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">

		{#- Atom and JSON feeds included by default #}
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">


		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&family=Poppins:ital,wght@0,300;0,400;0,500;1,300;1,400;1,500&display=swap" rel="stylesheet">

		{% set css %}
			{% include "src/public/css/index.css" %}
			{% include "src/public/css/topics.css" %}
			{% include "src/public/css/tags.css" %}
			{% include "src/public/css/theme.css" %}
		{% endset %}
		<style>{{ css | cssmin | safe }}</style>

	</head>
	<body>
		<header>
			{% include "../header.njk" %}
		</header>
		<main>
			{{ content | safe }}
		</main>
		<footer>
			{% include "../footer.njk" %}
		</footer>
	</body>
</html>
